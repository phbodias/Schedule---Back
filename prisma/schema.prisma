// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Countries {
  id        Int      @id @default(autoincrement())
  country   String   @unique
  createdAt DateTime @default(now())
  states    States[]

  @@map("countries")
}

model States {
  id         Int       @id @default(autoincrement())
  state      String
  initials   String
  Countries  Countries @relation(fields: [countrieId], references: [id])
  countrieId Int
  createdAt  DateTime  @default(now())
  cities     Cities[]

  @@unique([initials, countrieId])
  @@map("states")
}

model Cities {
  id            Int             @id @default(autoincrement())
  city          String
  States        States          @relation(fields: [stateId], references: [id])
  stateId       Int
  createdAt     DateTime        @default(now())
  Professionals Professionals[]

  @@unique([city, stateId])
  @@map("cities")
}

model Users {
  id         Int           @id @default(autoincrement())
  name       String
  password   String
  email      String        @unique
  createdAt  DateTime      @default(now())
  profilePic ProfilePics[]
  Scheduled  Scheduled[]

  @@map("users")
}

model ProfilePics {
  id        Int      @id @default(autoincrement())
  url       String
  Users     Users    @relation(fields: [userId], references: [id])
  userId    Int      @unique
  s3key     String
  createdAt DateTime @default(now())

  @@map("profilePics")
}

model Services {
  id            Int             @id @default(autoincrement())
  service       String          @unique
  createdAt     DateTime        @default(now())
  professionals Professionals[]

  @@map("services")
}

model Professionals {
  id         Int        @id @default(autoincrement())
  name       String
  phone      Int        @unique
  address    String
  profilePic String
  City       Cities     @relation(fields: [cityId], references: [id])
  cityId     Int
  Services   Services   @relation(fields: [serviceId], references: [id])
  serviceId  Int
  createdAt  DateTime   @default(now())
  schedule   Schedule[]

  @@map("professionals")
}

model Schedule {
  id             Int            @id @default(autoincrement())
  Professionals  Professionals? @relation(fields: [professionalId], references: [id])
  professionalId Int
  day            DateTime
  time           DateTime
  free           Boolean        @default(false)
  createdAt      DateTime       @default(now())
  Scheduled      Scheduled[]

  @@map("schedule")
}

model Scheduled {
  id         Int      @id @default(autoincrement())
  User       Users    @relation(fields: [userId], references: [id])
  userId     Int
  Schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int      @unique
  createdAt  DateTime @default(now())
}
